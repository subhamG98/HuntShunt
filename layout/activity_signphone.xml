
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:windowSoftInputMode="adjustPan|adjustResize"

    android:background="@drawable/bg2"

    tools:context="com.github.florent37.materialviewpager.subham.signphone">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:windowSoftInputMode="adjustPan|adjustResize"

        android:id="@+id/scrollView3" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/linearLayout2"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:text="Hunt Shunt"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:id="@+id/local"
                    android:textStyle="bold" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#67ffffff"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@null"
                            android:hint="Name"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:id="@+id/name"
                            android:textColorHint="#fff6f5ff"
                            android:textColor="@color/white" />


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@null"
                            android:hint="User Name"
                            android:textColorHint="#fff6f5ff"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:id="@+id/username"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white" />
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@null"
                            android:hint="Password"
                            android:textColorHint="#fff6f5ff"
                            android:inputType="textPassword"

                            android:padding="5dp"
                            android:singleLine="true"
                            android:id="@+id/password"
                            android:layout_gravity="center_horizontal"
                        android:textColor="@color/white" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@null"
                            android:hint="Age"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColorHint="#fff6f5ff"
                            android:id="@+id/age"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:inputType="number" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioGroup"
                            android:weightSum="1">

                            <RadioButton
                                android:layout_width="169dp"
                                android:layout_height="wrap_content"
                                android:text="Male"

                                android:id="@+id/Male"
                                android:checked="false"
                                android:textColor="@color/white" />

                            <RadioButton
                                android:layout_width="106dp"
                                android:layout_height="wrap_content"
                                android:text="Female"
                                android:id="@+id/Female"
                                android:checked="false"
                                android:textColor="@color/white" />

                        </RadioGroup>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@null"
                            android:hint="Location"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:id="@+id/location"
                            android:textColorHint="#fff6f5ff"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white" />

                        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/aa">
                            <Button
                                android:id="@+id/add"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_alignParentRight="true"
                                android:text="+"
                                android:layout_marginTop="-8dp" />
                            <AutoCompleteTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/hobbies"
                                android:layout_alignParentLeft="true"
                                android:hint="Hobbies"
                                android:background="@null"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textColorHint="#fff6f5ff"
                                android:layout_toLeftOf="@+id/add"
                                android:layout_toStartOf="@+id/add"
                                android:textColor="@color/white"
                                android:layout_marginBottom="10dp" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/container"
                            android:orientation="horizontal">

                        </LinearLayout>



                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@null"
                            android:hint="About You"
                            android:padding="5dp"
                            android:textColorHint="#fff6f5ff"
                            android:singleLine="true"
                            android:id="@+id/aboutyou"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
                android:layout_below="@+id/linearLayout2"
               android:layout_centerHorizontal="true"
               android:id="@+id/linearLayout">

                <com.digits.sdk.android.DigitsAuthButton
                    android:id="@+id/auth_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@color/white"
                    android:text="NEXT"
                    android:textColor="#A92815" />



            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
