<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/mainView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"

        tools:context="com.github.florent37.materialviewpager.subham.UserProfile1"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="fill_parent"
                android:layout_height="320dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"

                app:contentPadding="0dp"
                android:layout_below="@+id/textView">



                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/img"
                    android:src="@drawable/default_contact"
                    android:transitionName="@string/transition_string"
                    android:layout_alignBottom="@+id/card_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:elevation="2dp"
                    android:scaleType="fitXY" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"

                app:contentPadding="0dp"
                android:layout_below="@+id/card_view"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp">


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"

                app:contentPadding="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/card_view2"
                android:layout_alignLeft="@+id/card_view2"
                android:layout_alignStart="@+id/card_view2">


            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="15dp"
                android:padding="10dp"
                android:id="@+id/textView6"
                android:textColor="#ff3c9684"
                android:layout_below="@+id/card_view"
                android:layout_alignRight="@+id/imageView5"
                android:layout_alignEnd="@+id/imageView5"
                android:layout_alignLeft="@+id/card_view2"
                android:layout_alignStart="@+id/card_view2"
                android:gravity="bottom"
                android:elevation="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:src="@drawable/line"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:layout_below="@+id/textView6"
                android:layout_alignRight="@+id/card_view2"
                android:elevation="2dp"
                android:layout_alignEnd="@+id/card_view2" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Personal"
                android:textSize="15dp"
                android:padding="10dp"
                android:id="@+id/textView8"
                android:textColor="#ff3c9684"
                android:layout_alignLeft="@+id/card_view1"
                android:layout_alignStart="@+id/card_view1"
                android:elevation="2dp"
                android:layout_marginLeft="5dp"
                android:layout_alignTop="@+id/card_view1"
                android:layout_alignRight="@+id/marker_progress1"
                android:layout_alignEnd="@+id/marker_progress1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="15dp"
                android:padding="10dp"
                android:gravity="start|center_horizontal"
                android:id="@+id/age"
                android:textColor="#fd171004"
                android:layout_below="@+id/textView8"
                android:layout_toRightOf="@+id/textView7"
                android:elevation="2dp"
                android:layout_alignRight="@+id/marker_progress1"
                android:layout_alignEnd="@+id/marker_progress1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="LOCATION"
                android:id="@+id/textView7"
                android:gravity="center|center_vertical|center_horizontal|clip_vertical|left"
                android:textStyle="bold|italic"
                android:textColor="#fd171004"
                android:layout_below="@+id/textView9"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:layout_above="@+id/hobbies"
                android:elevation="2dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="15dp"
                android:padding="10dp"
                android:gravity="start|center_horizontal"
                android:elevation="2dp"
                android:id="@+id/location"
                android:textColor="#fd171004"
                android:layout_below="@+id/age"
                android:layout_toRightOf="@+id/textView7"
                android:layout_alignRight="@+id/marker_progress1"
                android:layout_alignEnd="@+id/marker_progress1" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="15dp"
                android:elevation="2dp"
                android:padding="10dp"
                android:gravity="center_horizontal|left"
                android:id="@+id/hobbies"
                android:layout_below="@+id/location"
                android:layout_alignLeft="@+id/location"
                android:layout_alignStart="@+id/location"
                android:textColor="#fd171004"
                android:layout_alignRight="@+id/marker_progress1"
                android:layout_alignEnd="@+id/marker_progress1" />




            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="15dp"
                android:padding="10dp"
                android:gravity="center_horizontal|left"
                android:id="@+id/about"
                android:layout_below="@+id/hobbies"
                android:layout_alignLeft="@+id/hobbies"
                android:layout_alignStart="@+id/hobbies"
                android:elevation="2dp"
                android:textColor="#fd171004"
                android:layout_alignRight="@+id/marker_progress1"
                android:layout_alignEnd="@+id/marker_progress1" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="HOBBIES"
                android:id="@+id/textView11"
                android:gravity="center|center_vertical|center_horizontal|left"
                android:textStyle="bold|italic"
                android:textColor="#fd171004"
                android:layout_alignBottom="@+id/hobbies"
                android:layout_toLeftOf="@+id/location"
                android:layout_alignLeft="@+id/card_view1"
                android:layout_alignStart="@+id/card_view1"
                android:layout_marginLeft="5dp"
                android:elevation="2dp"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="ABOUT"
                android:id="@+id/textView12"
                android:gravity="center|center_vertical|center_horizontal|clip_vertical|left"
                android:textStyle="bold|italic"
                android:elevation="2dp"
                android:textColor="#fd171004"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:layout_alignBottom="@+id/about"
                android:layout_toLeftOf="@+id/about"
                android:layout_toStartOf="@+id/about"
                android:layout_below="@+id/textView11"
                android:layout_marginTop="10dp" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/friend"
                android:src="@drawable/add_friend"
                android:scaleType="fitXY"
                android:layout_below="@+id/textView"
                android:layout_alignRight="@+id/card_view"
                android:layout_alignEnd="@+id/card_view"
                android:elevation="2dp"
                android:visibility="invisible" />

            <android.support.v7.widget.RecyclerView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/recyclerViewUser"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/card_view1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Profile"
                android:id="@+id/textView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/friend"
                android:elevation="2dp"
                android:layout_alignRight="@+id/card_view"
                android:layout_alignEnd="@+id/card_view"
                android:padding="15dp"
                android:background="#ff738da3"
                android:textColor="#fffafff9"
                android:gravity="center|bottom" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:background="@drawable/ic_arrow_back_white_24dp"
                android:padding="2dp"
                android:layout_above="@+id/card_view"
                android:layout_alignLeft="@+id/card_view"
                android:layout_alignStart="@+id/card_view"
                android:layout_marginLeft="10dp"
                android:elevation="2dp"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:src="@drawable/line"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:paddingBottom="5dp"
                android:layout_alignBottom="@+id/textView8"
                android:layout_alignRight="@+id/card_view1"
                android:elevation="2dp"
                android:layout_alignEnd="@+id/card_view1" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/namedp"
                android:textColor="#ffffffff"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:elevation="2dp"
                android:gravity="center_horizontal"
                android:background="@drawable/oval_bg_recommends"
                android:layout_alignLeft="@+id/card_view"
                android:layout_alignStart="@+id/card_view"
                android:layout_above="@+id/imageView3" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:id="@+id/imageView3"
                android:src="@drawable/new_line"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:elevation="2dp"
                android:layout_above="@+id/card_view2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:elevation="2dp"
                android:gravity="center_horizontal"
                android:id="@+id/status"
                android:textColor="#fd171004"
                android:layout_below="@+id/textView6"
                android:layout_alignLeft="@+id/textView6"
                android:layout_alignStart="@+id/textView6"
                android:layout_toLeftOf="@+id/marker_progress1"
                android:layout_toStartOf="@+id/marker_progress1" />


            <ProgressBar android:indeterminate="true"
                android:layout_width="50dp" android:layout_height="50dp"
                android:id="@+id/marker_progress1" style="?android:attr/progressBarStyle"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_below="@+id/imageView4"
                android:layout_alignBottom="@+id/status"
                android:layout_alignRight="@+id/card_view2"
                android:layout_alignEnd="@+id/card_view2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:elevation="2dp"
                android:text="AGE"
                android:id="@+id/textView9"
                android:gravity="center|center_vertical|center_horizontal|clip_vertical"
                android:textStyle="bold|italic"
                android:textColor="#fd171004"
                android:layout_alignTop="@+id/age"
                android:layout_toLeftOf="@+id/age"
                android:layout_alignBottom="@+id/age"
                android:layout_toEndOf="@+id/textView12"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:layout_marginTop="10dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="UPDATE"
                android:id="@+id/updateuser"
                android:background="@drawable/bg_button_rounded"
                android:elevation="2dp"
                android:layout_below="@+id/recyclerViewUser"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp" />

            <ImageButton
                android:id="@+id/addimages"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/capturei_plus"
                android:adjustViewBounds="false"
                android:scaleType="centerInside"
                android:background="#02cd2358"
                android:layout_below="@+id/recyclerViewUser"
                android:elevation="2dp"
                android:layout_alignRight="@+id/about"
                android:layout_alignEnd="@+id/about"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp" />

        </RelativeLayout>


    </RelativeLayout>
</ScrollView>


